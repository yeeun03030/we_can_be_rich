<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".RealMain">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You Can"
        android:textSize="50dp"
        android:textColor="#8F8E3C"
        android:layout_gravity="center"
        android:layout_marginTop="200dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Be Rich!"
        android:textSize="70dp"
        android:textColor="#287330"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/mainBtn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="시작하기"
        android:textSize="30dp"
        android:backgroundTint="#F8C358"
        android:textColor="#502C2C"
        android:layout_marginTop="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="※ 해당 어플은 재미를 위한 어플로 금전적인 책임을 지지 않습니다."
        android:textSize="10dp"
        android:layout_marginTop="200dp"
        android:layout_gravity="center"/>

</LinearLayout>